<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.treevalue.robot.user.mybatis.repository.UserMapper">

    <select id="findByName" resultType="com.treevalue.robot.user.mybatis.model.User">
        SELECT * FROM tvr_users WHERE name = #{name}
    </select>

    <select id="findByEmail" resultType="com.treevalue.robot.user.mybatis.model.User">
        SELECT *
        FROM tvr_users
        WHERE email = #{email}
    </select>
</mapper>
